{
  "name": "assets",
  "version": "0.0.1",
  "description": "assets browser for asset-db",
  "author": "Firebox Technology",
  "hosts": {
    "editor-framework": "^0.3.5"
  },
  "dependencies": {
      "ui-kit": "^0.0.6",
      "ui-tree": "^0.0.1"
  },
  "main": "main.js",
  "menus": {
    "Panel/Assets": {
      "icon": "panel/icon.png",
      "accelerator": "CmdOrCtrl+2",
      "message": "assets:open"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/assets.html",
      "type": "dockable",
      "title": "Assets",
      "icon": "panel/icon.png",
      "width": 200,
      "shortcuts": {
        "command+f": "focusOnSearch",
        "#tree": {
          "up": "selectPrev",
          "down": "selectNext",
          "shift+up": "shiftSelectPrev",
          "shift+down": "shiftSelectNext",
          "left": "foldCurrent",
          "right": "foldupCurrent",
          "enter": "renameCurrentSelected",
          "f2": "renameCurrentSelected",
          "command+backspace": "deleteCurrentSelected",
          "del": "deleteCurrentSelected"
        }
      },
      "messages": [
        "editor:hint-asset",
        "selection:selected",
        "selection:unselected",
        "selection:activated",
        "selection:deactivated",
        "asset-db:assets-created",
        "asset-db:assets-moved",
        "asset-db:assets-deleted",
        "assets:new-asset",
        "assets:context-menu-rename",
        "assets:context-menu-delete",
        "assets:context-menu-explore",
        "assets:context-menu-explore-lib",
        "assets:context-menu-show-uuid"
      ],
      "profiles": {
        "local": {
          "item-states": []
        }
      }
    }
  },
  "tests": [
    "test/basic.html"
  ]
}
